<?xml version="1.0" encoding="utf-8"?> 

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
	android:orientation="vertical" android:layout_width="fill_parent" 
	android:layout_height="fill_parent" android:paddingLeft="10dip" 
	android:paddingRight="10dip"> 
	
	
	
	<TextView 	android:layout_width="fill_parent" 
				android:layout_height="wrap_content" 
				android:text="Username:"
				android:textColor="#ffffffff" /> 
	
	
	<EditText 	android:id="@+id/username_id" 
				android:layout_width="250dip" 
				android:layout_height="wrap_content" /> 
				
	<TextView 	android:layout_width="fill_parent" 
				android:layout_height="wrap_content" 
				android:text="Password:" 
				android:textColor="#ffffffff"/> 
				
				
	<EditText 	android:id="@+id/password_id" 
				android:layout_width="250dip" 
				android:layout_height="wrap_content" android:password="true"/> 
				
	<TextView 	android:layout_width="fill_parent" 
				android:layout_height="wrap_content" 
				android:text="Path:" 
				android:textColor="#ffffffff"/> 
				
				
	<EditText 	android:id="@+id/path_id" 
				android:layout_width="250dip" 
				android:layout_height="wrap_content" /> 
	
	<LinearLayout 	android:orientation="horizontal" 
					android:layout_width="fill_parent" 
					android:layout_height="fill_parent" 
					android:paddingTop="15dip"> 
		
			<Button android:id="@+id/ok_button" 
					android:layout_width="80dip" 
					android:layout_height="fill_parent" 
					android:text="Ok" /> 
			
			<Button android:id="@+id/cancel_button" 
					android:layout_width="80dip" 
					android:layout_height="fill_parent" 
					android:text="Cancel" /> 
	</LinearLayout> 

</LinearLayout> 
