<org.tomdroid.ui.Actionbar  
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/dhistory_row" 
        android:layout_width="fill_parent" 
        android:layout_height="40dip"
        android:background="#ddd"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/action_icon"
            android:src="@drawable/icon"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:scaleType="fitStart"
            android:padding="4dip"
            />
        <TextView 
            android:id="@+id/title"
            android:text="Tomdroid"
            android:layout_marginLeft="42dip"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="18dip"
            android:textStyle="bold"
			android:textColor="#FF555555"
			android:singleLine="true"
        	android:ellipsize="marquee"
        	android:fadingEdge="horizontal"
        	android:fadingEdgeLength="5mm"
			android:paddingTop="10dip"
			android:paddingRight="30dip"
            />
        <ImageView
            android:id="@+id/sync"
            android:src="@drawable/icon_actionbar_sync_background"
            android:background="@drawable/syncbutton_background"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:scaleType="center"
            android:clickable="true"
            android:focusable="true"
            />
        <ImageView
            android:id="@+id/syncIcon"
            android:src="@drawable/icon_actionbar_sync"
            android:background="#00000000"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:scaleType="center"
            />
        <ImageView
             android:id="@+id/sync_dot"
             android:src="@drawable/icon_actionbar_dot"
             android:layout_alignParentRight="true"
             android:layout_width="wrap_content"
             android:layout_height="fill_parent"
             android:scaleType="center"
             android:visibility="invisible"
             />
</org.tomdroid.ui.Actionbar>